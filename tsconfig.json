{
    "extends": "@tsconfig/node16-strictest/tsconfig.json",

    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "lib/*": ["lib/*"],
            "scripts/*": ["scripts/*"]
        },
    },

    "imclude": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],

    "ts-node": {
        "files": true
    }
}
