{
    "name": "blue-owl",
    "version": "0.0.0",
    "description": "Technical Official device integration for OWLCMS",
    "keywords": [
        "owlcms",
        "referee",
        "weightlifting"
    ],
    "main": "index.js",
    "bin": "./dist/build-it-yourself/scripts/startdevice.js",
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "lint": "concurrently \"npm:lint:*\"",
        "lint:eslint": "npx eslint .",
        "lint:ts": "tsc --noEmit --pretty -p tsconfig.lint.json",
        "jury-3": "npm run ts ./src/scripts/jury-3.ts",
        "jury-5": "npm run ts ./src/scripts/jury-5.ts",
        "referee-single": "npm run ts ./src/scripts/referee-single.ts",
        "referee": "npm run ts ./src/scripts/referee.ts",
        "test": "npm run lint",
        "ts": "cross-env DEBUG=blue-owl:* ts-node -r tsconfig-paths/register",
        "timekeeper": "npm run ts ./src/scripts/timekeeper.ts"
    },
    "author": {
        "name": "Scott Gonz√°lez",
        "email": "scott.gonzalez@gmail.com",
        "url": "http://scottgonzalez.com"
    },
    "license": "ISC",
    "dependencies": {
        "debug": "^4.3.4",
        "dotenv": "^16.0.3",
        "firmata": "^2.3.0",
        "johnny-five": "^2.1.0",
        "mqtt": "^4.3.7",
        "prompt-sync": "^4.2.0"
    },
    "devDependencies": {
        "@tsconfig/node16-strictest": "^1.0.4",
        "@types/debug": "^4.1.7",
        "@types/johnny-five": "^1.3.7",
        "@types/node": "^16.11.66",
        "@types/prompt-sync": "^4.2.0",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.28.0",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.8.4"
    },
    "pkg": {
        "scripts" : "dist/**/*.js",
        "assets" : [
            "node_modules/@serialport/**/*.node",
            "node_modules/johnny-five/**/*.node*"
        ],
        "targets": [
            "node16-win"
        ]
    }
}
